@model IEnumerable<MealService.Domain.Entities.Recipie>

@{
    ViewBag.Title = "Recipies";
}

<h2>Recipies</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Chef.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecipieName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PreparationTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Serves)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OriginCountry)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Chef.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecipieName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PreparationTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Serves)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OriginCountry)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
